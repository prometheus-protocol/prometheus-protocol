{
  "name": "@prometheus-protocol/prometheus-protocol",
  "version": "0.1.0",
  "keywords": [
    "MCP",
    "MCP Server",
    "MCP Protocol",
    "IC",
    "Internet Computer Protocol",
    "Internet Computer",
    "Motoko",
    "JavaScript",
    "Canister"
  ],
  "private": true,
  "description": "The monorepo for the Prometheus Protocol, the trust layer for decentralized commerce on the Internet Computer.",
  "scripts": {
    "dev": "DFX_NETWORK=local pnpm --filter @prometheus-protocol/frontend dev",
    "build": "pnpm --filter \"./packages/**\" build",
    "deploy": "dfx deploy",
    "ic:up": "dfx start --host 0.0.0.0:4943 --domain localhost --domain host.docker.internal --background",
    "ic:down": "dfx stop",
    "test": "pnpm test:apps && pnpm test:libs && pnpm test:canisters",
    "test:apps": "pnpm --filter \"./packages/apps/*\" test",
    "test:libs": "pnpm --filter \"./packages/libs/*\" test",
    "test:mo": "pnpm --filter \"./packages/canisters/*\" test:mo",
    "test:canisters": "vitest --project canister-tests",
    "test:e2e": "vitest --project e2e-tests",
    "format": "prettier --write .",
    "seed:app-bounties": "zx ./scripts/seed-app-bounties.ts",
    "seed:leaderboard": "zx ./scripts/seed-leaderboard.ts",
    "seed": "npm run seed:app-bounties && npm run seed:leaderboard",
    "setup:local": "zx ./scripts/setup-local-dev.ts",
    "register:dev-verifiers": "zx ./scripts/register-dev-verifiers.ts",
    "register:dev-verifiers:ic": "zx ./scripts/register-dev-verifiers.ts --network ic",
    "check:verifier-balances": "zx ./scripts/check-verifier-balances.ts",
    "check:verifier-balances:ic": "zx ./scripts/check-verifier-balances.ts --network ic",
    "topup:verifiers": "zx ./scripts/topup-verifiers.ts",
    "topup:verifiers:ic": "zx ./scripts/topup-verifiers.ts --network ic",
    "list:api-keys": "zx ./scripts/list-dev-api-keys.ts",
    "list:api-keys:ic": "zx ./scripts/list-dev-api-keys.ts --network ic",
    "generate:verifier-env": "zx ./scripts/generate-verifier-env.ts",
    "generate:verifier-env:ic": "zx ./scripts/generate-verifier-env.ts --network ic",
    "verifiers:up": "cd packages/apps/verifier-bot/deployment && docker-compose up -d",
    "verifiers:down": "cd packages/apps/verifier-bot/deployment && docker-compose down",
    "verifiers:logs": "cd packages/apps/verifier-bot/deployment && docker-compose logs -f",
    "verifiers:restart": "cd packages/apps/verifier-bot/deployment && docker-compose restart",
    "config:check": "zx ./scripts/configure-canisters.ts --check",
    "config:inject": "zx ./scripts/configure-canisters.ts --inject",
    "config:status": "zx ./scripts/configure-canisters.ts --status",
    "sync:wasms": "tsx ./scripts/sync-historical-wasms.ts",
    "release:test-app": "tsx ./scripts/release-test-app.ts"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^2.0.3",
    "@dfinity/ic-management": "^7.1.3",
    "@dfinity/pic": "^0.16.1",
    "@dfinity/utils": "^3.2.0",
    "@icp-sdk/core": "^4.0.1",
    "@faker-js/faker": "^10.0.0",
    "@codedependant/semantic-release-docker": "^5.1.1",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.4",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "cross-fetch": "^4.1.0",
    "jose": "^6.0.12",
    "pem-file": "^1.0.1",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "semantic-release-monorepo": "^8.0.2",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zx": "^8.8.1"
  }
}
