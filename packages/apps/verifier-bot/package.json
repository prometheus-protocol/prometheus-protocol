{
  "name": "@prometheus-protocol/verifier-bot",
  "version": "1.0.0",
  "private": true,
  "description": "Automated build verification bot for the Prometheus Protocol App Store",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "node build.mjs",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "docker:build": "pnpm build && docker build -t verifier-bot:latest .",
    "docker:publish": "./publish-container.sh"
  },
  "keywords": [
    "icp",
    "internet-computer",
    "verifier",
    "reproducible-builds",
    "motoko"
  ],
  "author": "Prometheus Protocol",
  "license": "MIT",
  "dependencies": {
    "@dfinity/agent": "^3.4.1",
    "@dfinity/candid": "^3.4.1",
    "@dfinity/pic": "^0.16.1",
    "@icp-sdk/core": "^4.0.1",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "pem-file": "^1.0.1"
  },
  "devDependencies": {
    "@prometheus-protocol/declarations": "workspace:*",
    "@prometheus-protocol/ic-js": "workspace:*",
    "@prometheus-protocol/reproducible-build": "workspace:*",
    "@types/node": "^20.10.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
