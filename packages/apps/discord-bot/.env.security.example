# OAuth Security Configuration

# OAuth Token Encryption Key (REQUIRED for production)
# This should be a secure, randomly generated 64-character hex string
# Generate with: openssl rand -hex 32
OAUTH_ENCRYPTION_KEY=your_secure_encryption_key_here_64_chars_minimum

# Additional Security Settings

# Rate limiting settings (requests per minute)
OAUTH_RATE_LIMIT_TOKEN_OPERATIONS=50
OAUTH_RATE_LIMIT_REFRESH_OPERATIONS=10

# Token security settings
OAUTH_TOKEN_EXPIRY_BUFFER_MINUTES=5
OAUTH_MAX_TOKEN_AGE_HOURS=24

# Security monitoring
OAUTH_ENABLE_AUDIT_LOGGING=true
OAUTH_LOG_TOKEN_OPERATIONS=true

# Token validation settings
OAUTH_MIN_TOKEN_LENGTH=10
OAUTH_MAX_TOKEN_LENGTH=8192

# Replay attack protection
OAUTH_TOKEN_REUSE_WINDOW_SECONDS=5

# Client registration security
OAUTH_REQUIRE_HTTPS_CALLBACKS=true
OAUTH_VALIDATE_CLIENT_METADATA=true